{
	"compilerOptions": {
		 "module": "commonjs",
		 "esModuleInterop": true,
		 "target": "es2018",
		 "noImplicitAny": false,
		 "moduleResolution": "node",
		 "sourceMap": true,
		 "outDir": "dist",
		 "baseUrl": ".",
		 "paths": {
			  "*": [
					"node_modules/*",
					"src/types/*"
			  ]
		 },
		 "lib": [
			  "es2018", "dom"
		 ]
	},
	"include": [
		 "src/*"
	]
}